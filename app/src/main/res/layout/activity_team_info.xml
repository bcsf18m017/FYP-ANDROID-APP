<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/orange"
           android:id="@+id/team_RL1">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/about"
               android:backgroundTint="@color/orange"
               android:layout_marginStart="5dp"
               android:layout_marginTop="5dp"
               android:id="@+id/team_logo"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_centerHorizontal="true"
               android:gravity="center"
               android:text="About Us"
               android:textColor="@color/black"
               android:textSize="30dp"
               android:textStyle="bold|italic" />
       </RelativeLayout>


        <TextView
            android:id="@+id/team_para"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_RL1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/About_Us"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Team Work"
            android:textColor="@color/orange"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/team_para"
            android:layout_marginTop="20dp"
            android:id="@+id/team_work"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_work"
            android:gravity="center"
            android:text="@string/About_Us2"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:id="@+id/team_para2"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Meet the Team"
            android:textColor="@color/orange"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/team_para2"
            android:layout_marginTop="20dp"
            android:id="@+id/meet_team"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/meet_team"
            android:gravity="center"
            android:id="@+id/team_linear1"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                android:layout_margin="20dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                android:layout_margin="20dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                android:layout_margin="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/team_linear1"
            android:gravity="center"
            android:id="@+id/team_linear2"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                android:layout_margin="20dp"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user"
                android:layout_margin="20dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="THINK WEâ€™D BE A\nGOOD MATCH?"
            android:textColor="@color/orange"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/team_linear2"
            android:layout_marginTop="20dp"
            android:id="@+id/team_match"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/team_match"
            android:layout_marginTop="15dp"
            android:layout_marginStart="80dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nomantahir1258@gmail.com"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_email_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anarkali Bazaar, FCIT, Lahore"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginVertical="20dp"
                android:drawableLeft="@drawable/address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+923024677533"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/login_phone"/>




        </LinearLayout>
    </RelativeLayout>




</ScrollView>