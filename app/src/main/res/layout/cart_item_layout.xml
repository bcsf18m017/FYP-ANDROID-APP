<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white"
        android:elevation="50dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/productImageCart"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/login_background" />


                <ImageView
                    android:id="@+id/delButtonCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/delicon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editButtonCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:elevation="0dp"
                    android:text="Edit"
                    android:textSize="18dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/productNameCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Product Name"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/productNameCart"
                    android:layout_marginStart="2dp"

                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/productPriceCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productNameCart"
                    android:layout_marginTop="10dp"
                    android:text="800000"
                    android:textColor="@color/black"
                    android:layout_marginStart="2dp"

                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productQuantityCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productNameCart"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:text="10x"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/productPriceCart"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="2dp"
                    android:background="#c0c0c0" />

                <TextView
                    android:id="@+id/productTotalCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productPriceCart"
                    android:layout_marginTop="20dp"
                    android:text="Total Price:1000000"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/productTotalCart"
                    android:background="#c0c0c0"
                    android:layout_marginStart="2dp"
                    />

                <Spinner
                    android:id="@+id/paymentMethodSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productTotalCart"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:spinnerMode="dropdown" />



            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>